{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
  "projectFolder": ".",
  "mainEntryPointFilePath": "<projectFolder>/esm/index.d.ts",
  "bundledPackages": [],
  "compiler": {
    "tsconfigFilePath": "<projectFolder>/tsconfig.json"
  },
  "apiReport": {
    "enabled": true,
    "reportFileName": "types-and-signatures.md",
    "reportFolder": "<projectFolder>/doc",
    "includeForgottenExports": false
  },

  "docModel": {
    "enabled": true,
    "apiJsonFilePath": "<projectFolder>/doc/types-and-signatures.json",
    "includeForgottenExports": false,
    "projectFolderUrl": "https://github.com/middle-ages/haag59/tree/main/packages/<unscopedPackageName>"
  },

  "dtsRollup": {
    "enabled": true,
     "untrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>.d.ts",
     "alphaTrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>-alpha.d.ts",
     "betaTrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>-beta.d.ts",
     "publicTrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>-public.d.ts"
  }
}
