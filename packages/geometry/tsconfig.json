{
  "display": "build",
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "importsNotUsedAsValues": "remove",
    "incremental": true,
    "outDir": "esm",
    "sourceMap": true,
    "tsBuildInfoFile": "esm/.tsbuildinfo",
    "types": ["node"]
  },
  "references": [
    { "path": "../commons/tsconfig.json" }
  ],
  "exclude": ["esm", "tests", "node_modules"]
}
